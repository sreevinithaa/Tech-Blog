
{{#if logged_in}} <div class="post_by">
  {{#if isEdit}}
  <a type="button" href="/editBlog/{{blog.id}}" class="btn bgcolor_2 text-light m-2" >
<i class="bi bi-pencil-fill"></i> Edit Blog
</a>
{{/if}}
<a type="button" href="/addcomment/{{blog.id}}" class="btn bgcolor_2 text-light" >
 <i class="bi bi-plus-circle-fill"></i> New Comment
</a></div> {{/if}}
<div class="card mb-3">
  <h5 class="card-header bgcolor_3 text-light">{{blog.title}} </h5>
  <footer class="blockquote-footer post_by"><cite title="Source Title">Post by
      {{blog.user.name}}
      on
      {{format_date blog.createdAt}}</cite>
  </footer>
  <div class="card-body">

    <p class="card-text">{{blog.content}}</p>

  </div>
</div>

<div class="card">
  <div class="card-header">
    Comments 
  </div>

  {{#each blog.comments as |comment|}}
    <div class="card-body">
      <blockquote class="blockquote mb-0">
        <p> {{comment.comment_content}}</p>
        <footer class="blockquote-footer">
          Comment by
          <cite title="Source Title">{{comment.user.name}} </cite></footer>
      </blockquote>
    </div>

  {{/each}}

</div>

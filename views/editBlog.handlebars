    <div class="bgcolor_3 text-light border rounded p-2"><h6>Edit Blog</h6></div>
    <form class="blog-form">
        <div class="form-group p-2">
        <label for="name-signup">Title</label>
        <input class="form-control" type="text" id="title" value="{{{blog.title}}}" />
      </div>
      <div class="form-group p-2">
        <label for="email-signup">Content</label>
        <textarea class="form-control" id="content" name="content" rows="4" cols="50">{{{blog.content}}}</textarea>
        <input type="hidden" id="id" value="{{{blog.id}}}">
      </div>
     
      <div class="form-group p-2">
        <button type="submit" class="btn bgcolor_2 text-light">Submit</button></div>

    </form>

  </div>
  <script src="../js/editBlog.js"></script> 
